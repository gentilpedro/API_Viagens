generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Viagem {
  id          Int          @id @default(autoincrement())
  destino     String       @db.VarChar(40)
  transporte  Transportes  
  dataSaida   DateTime     @default(now())
  preco       Decimal      @db.Decimal(9, 2)
  duracao     Int          @db.SmallInt()
  hotel       String       @db.VarChar(50) @default("")
  estrelas    Int          @db.SmallInt() @default(0)
  @@map("viagens")
}

enum Transportes {
  Terrestre
  Marítimo
  Aéreo
}